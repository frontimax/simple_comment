<p id="notice"><%= notice %></p>

<div style="padding-bottom: 10px;">
  <div class="drow">
    <div class="dcell"><%= link_to '<button type="button">Edit comment</button>'.html_safe, edit_comment_path(@comment) %></div>
    <div class="dcell"><%= link_to '<button type="button">Return to article</button>'.html_safe,
                                   article_path(id: @comment.parent_id)  if is_owner?(@comment.user) %>
    </div>
    <div class="dcell"><%= link_to '<button type="button">Delete comment</button>'.html_safe,
                                   @comment, method: :delete, data: { confirm: 'Are you sure?' }  if is_owner?(@comment.user) %>
    </div>
  </div>
</div>

<div style="border: solid 1px lightgray; padding: 0 10px 5px 10px; width: 600px; margin-bottom: 20px; font-size: 9pt;">
  <div>
    <div class="drow">
      <div class="dcell">
        <h3><%= @comment.title %></h3>
      </div>
    </div>
  </div>

  <div>
    <div class="drow" style="font-style: italic;">
      <div class="dcell">
        <b>Author: </b><%= "#{@comment.user.name}" %>
      </div>
      <div class="dcell">
        <b>Created: </b><%= "#{ts(@comment.created_at)}" %>
      </div>
      <div class="dcell">
        <% if @comment.created_at != @comment.updated_at %>
            <b>Modified: </b><%= "#{ts(@comment.updated_at)}" %>
        <% end %>
      </div>
    </div>
  </div>

  <div style="padding-top: 10px;">
    <%= @comment.content %>
  </div>

</div>

<div style="border: solid 1px lightskyblue; padding: 15px; width: 700px; margin-bottom: 20px;">
  <div>
    <div class="drow">
      <div class="dcell">
        <h3><%= @article.title %></h3>
      </div>
    </div>
  </div>

  <div>
    <div class="drow" style="font-style: italic;">
      <div class="dcell">
        <b>Author: </b><%= "#{@article.user.name}" %>
      </div>
      <div class="dcell">
        <b>Created: </b><%= "#{ts(@article.created_at)}" %>
      </div>
      <div class="dcell">
        <% if @article.created_at != @article.updated_at %>
            <b>Modified: </b><%= "#{ts(@article.updated_at)}" %>
        <% end %>
      </div>
    </div>
  </div>

  <div style="padding-top: 10px;">
    <%= @article.content %>
  </div>
</div>